<div class='mt-4 container'>
  <div class='title'>
    <h1>Thông Tin Bác Sĩ</h1>
  </div>
  <div class='row'>
    <div class='col-lg-3'>
      <img
        class='card-img-top'
        src='{{account.image}}'
        alt='{{account.name}}'
      />
    </div>
    <div class='col-lg-9'>
      <h2>Họ và tên: {{account.name}}</h2>
      <h2>Lịch Làm Việc: {{account.time}}</h2>
      <h2>Chuyên khoa: {{account.name}}</h2>
      <h2>Chứng Nhận: {{account.chungNhan}}</h2>
      <h3>Mô tả: {{account.description}}</h3>
    </div>
  </div>
</div>
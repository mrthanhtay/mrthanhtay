<div class='mt-4 container'>
  <H3>Cập Nhật Thông Tin</H3>

  <form method='POST' action='/accounts/{{account._id}}?_method=PUT'>
    <div class='form-group'>
      <label for='name'>Họ Và Tên</label>
      <input
        type='text'
        class='form-control'
        value='{{account.name}}'
        id='name'
        name='name'
      />
    </div>
    <div class='form-group'>
      <label for='description'>Mô Tả</label>
      <textarea
        class='form-control'
        id='description'
        name='description'
      >{{account.description}}</textarea>
    </div>
    <div class='form-group'>
      <label for='khoa'>Chuyên Khoa</label>
      <input
        type='text'
        class='form-control'
        value='{{account.khoa}}'
        id='khoa'
        name='khoa'
      />
    </div>
    <div class='form-group'>
      <label for='time'>Lịch Làm Việc</label>
      <input
        type='text'
        class='form-control'
        value='{{account.time}}'
        id='time'
        name='time'
      />
    </div>
    <div class='form-group'>
      <label for='chungNhan'>Chứng Nhận</label>
      <input
        type='text'
        class='form-control'
        value='{{account.chungNhan}}'
        id='chungNhan'
        name='chungNhan'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Lưu Lại</button>
  </form>
</div>